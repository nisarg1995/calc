<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="SimpleCalculatorButtonTheme">
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/twentyonedp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/simple_calc_rectangle_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SimpleCalculatorButtonTheme2" parent="SimpleCalculatorButtonTheme">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SimpleCalculatorTableRowTheme">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="InterestCalcTextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/twentyfivedp</item>
        <item name="android:paddingBottom">@dimen/fivedp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/interest_calc_textview_rectangle</item>
    </style>

    <style name="theme" parent="InterestCalcTextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:bottomDark">@color/orange</item>
    </style>

    <style name="InterestCalcEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/twentyfivedp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/twentyfivedp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/interest_calc_rectangle_button</item>
    </style>

    <style name="InterestCalcOutputTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/twentyfivedp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InterestCalcOutputTextView2" parent="InterestCalcOutputTextView">
        <item name="android:gravity">right</item>
    </style>

    <style name="InterestCalcOutputTextView3" parent="InterestCalcOutputTextView">
        <item name="android:textSize">@dimen/fifteendp</item>
    </style>

    <style name="InterestCalcOutputTextView4" parent="InterestCalcOutputTextView2">
        <item name="android:textSize">@dimen/fifteendp</item>
    </style>

    <style name="ConvertorCalcTextView" parent="InterestCalcOutputTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        
    </style>

    <style name="MortgageCalcEditText">
        <item name="android:inputType">numberDecimal|textMultiLine</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/fourtydp</item>
        <item name="android:paddingTop">@dimen/fivedp</item>
        <item name="android:paddingBottom">@dimen/fivedp</item>
        <item name="android:layout_marginRight">@dimen/tendp</item>
        <item name="android:layout_marginLeft">@dimen/tendp</item>
        <item name="android:textSize">@dimen/twentyfivedp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/interest_calc_rectangle_button</item>
    </style>

    <style name="MortgageCalcEditText2" parent="MortgageCalcEditText">
        <item name="android:textSize">@dimen/twentyfivedp</item>
    </style>

    <style name="MortgageCalcOutputTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/twentytwodp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MortgageCalcOutputTextView2" parent="MortgageCalcOutputTextView">
        <item name="android:gravity">right</item>
    </style>

    <style name="MortgageCalcOutputTextView3" parent="MortgageCalcOutputTextView">
        <item name="android:textSize">@dimen/fourteendp</item>
    </style>

    <style name="MortgageCalcOutputTextView4" parent="MortgageCalcOutputTextView2">
        <item name="android:textSize">@dimen/fourteendp</item>
    </style>

    <style name="DaysCalCTextViewTheme">
        <item name="android:textSize">@dimen/eighteendp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/fivedp</item>
    </style>

    <style name="DaysCalCEditTextTheme">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/thirtydp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/interest_calc_rectangle_button</item>
    </style>

    <style name="DaysCalCEditTextTheme2">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/thirtydp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/interest_calc_rectangle_button</item>
        <item name="android:editable">false</item>
    </style>

    <style name="LoveCalCMainEditTextTheme">
        <item name="android:textSize">@dimen/eighteendp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/love_calc_rectangular_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.8</item>
        </style>

    <style name="LoveCalCMainTextViewTheme">
        <item name="android:textSize">@dimen/thirtydp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
