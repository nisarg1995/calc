<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="in.hiddenbrains.calc.Activities.LovaCalCMainActivity"
    >

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/simple_calc_rectangle_button"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LoveCalCMainTextViewTheme"
                android:text="@string/him"
                 />
            <EditText
                android:id="@+id/himname"
                style="@style/LoveCalCMainEditTextTheme"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LoveCalCMainTextViewTheme"
                android:text="@string/birthday"
                />
            <Button
                android:id="@+id/himbirthday"
                android:textSize="11sp"
                android:layout_weight="1"
                android:text="@string/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LoveCalCMainTextViewTheme"
                android:text="@string/zodiac"
                />
            <Spinner
                android:id="@+id/himspinner"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/simple_calc_rectangle_button"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LoveCalCMainTextViewTheme"
                android:text="@string/her"
                />
            <EditText
                android:id="@+id/hername"
                style="@style/LoveCalCMainEditTextTheme"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LoveCalCMainTextViewTheme"
                android:text="@string/birthday"
                />
            <Button
                android:id="@+id/herbirthday"
                android:textSize="11sp"
                android:layout_weight="1"
                android:text="@string/text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LoveCalCMainTextViewTheme"
                android:text="@string/zodiac"
                />
            <Spinner
                android:id="@+id/herspinner"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/calculate"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:textSize="25sp"
        android:text="@string/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
