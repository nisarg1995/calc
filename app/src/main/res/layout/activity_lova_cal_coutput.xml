<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.hiddenbrains.calc.Activities.LovaCalCOutputActivity">

    <TextView
        android:textColor="@color/white"
        android:id="@+id/answer"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_heart">
    </TextView>

    <TextView
        android:id="@+id/temp"
        android:textSize="@dimen/fiftydp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/minus130"
        android:layout_marginBottom="@dimen/eightydp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/quote"
        android:textSize="@dimen/fourtydp"
        android:layout_marginTop="@dimen/fivedp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/fivedp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ok"
            android:text="@string/ok"
            android:textSize="@dimen/twentyfivedp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:layout_marginRight="@dimen/tendp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/home"
            android:text="@string/home"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:textSize="@dimen/twentyfivedp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
