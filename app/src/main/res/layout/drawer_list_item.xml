<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/parent"
    android:background="@color/nevigationdrawer"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/thirtydp"
        android:layout_height="@dimen/thirtydp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/twelvedp"
        android:layout_marginRight="@dimen/twentydp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/title"
        android:textSize="@dimen/seventeendp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/list_item_title"
        android:gravity="center_vertical"
        android:paddingRight="20dp"/>
</RelativeLayout>